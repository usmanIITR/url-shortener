<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>LogIn</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>URL Shortener</h1>
    <form action='/login' method="POST" class="my-5 form-inline">
        <label for="Email" class="sr-only">Email</label>
        <input required placeholder="Enter Email" type="email" name="email" id="email" class="form-control col mr-2">
        <label for="Password" class="sr-only">Password</label>
        <input required placeholder="Enter Password" type="password" name="password" id="password" class="form-control col mr-2">
        <button type="submit" class="btn btn-success">Log In</button>
    </form>
    </div>
    <div>
        <button class="btn btn-info" id="goToSignUp">Create an Account here. Sign Up Now</button>
      </div>
      <script>
        try{
              const signUpButton = document.getElementById('goToSignUp');
              signUpButton.addEventListener('click', async () => {
                location.assign('/signup');
              });
          }
          catch(error){
              console.log("ERROR IN GOING FROM LOGIN TO SIGNUP");
              console.log(error);
          }
      </script>
</body>
</html>